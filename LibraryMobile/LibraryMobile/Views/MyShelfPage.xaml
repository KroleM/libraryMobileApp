                               FontSize="12"
                               FontFamily="Quicksand-Light"/>
                                    <Label Text="Author:"
                               TextColor="DarkGray" 
                               FontSize="12"
                               FontFamily="Quicksand-Light"/>
                                    <Label Text="sample author"
                               TextColor="WhiteSmoke" 
                               FontSize="12"
                               FontFamily="Quicksand-Light"/>
                                </StackLayout>

                                <custom:CustomButton Grid.Column="2" Grid.Row="0"
                                        Text="Remove"
                                    ImageSource="heart_fill.png" 
                                TextColor="DeepSkyBlue"
                                WidthRequest="120"
                                CornerRadius="10"
                                HorizontalOptions="End" 
                                VerticalOptions="Start"
                                BorderWidth="0"
                                FontFamily="Quicksand-Light"
                                BorderColor="DeepSkyBlue" 
                                BackgroundColor="Transparent"
                                Margin="0,0,0,0"
                             />


                                <BoxView Color="#095169"
                             HeightRequest="1"
                             HorizontalOptions="Fill"
                             Grid.Row="1"
                             Margin="5"
                             Grid.ColumnSpan="3" />

                                <Grid Grid.Column="0" Grid.Row="2" Margin="7,0,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="30"/>
                                    </Grid.RowDefinitions>
                                    <Image Source="star.png"
                                    Grid.Row="0"
                                   Grid.Column="0"
                                    Margin="0"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center" />
                                    <Label 
                                Grid.Column="1"
                                    Grid.Row="0"
                                   Text="4.5" 
                                   TextColor="DeepSkyBlue"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center"
                                   />
                                </Grid>

                                <custom:CustomButton Grid.Column="2" Grid.Row="2"
                                Text="Details"
                                TextColor="DeepSkyBlue"
                                WidthRequest="120"
                                CornerRadius="10"
                                HorizontalOptions="End" 
                                VerticalOptions="End"
                                BorderWidth="1"
                                FontFamily="Quicksand-Light"
                                BorderColor="DeepSkyBlue" 
                                BackgroundColor="Transparent"
                                Margin="0,0,0,5"
                             />

                            </Grid>
                        </Frame>




                        <CollectionView ItemsSource="{Binding Section2Books}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <StackLayout>
                                        <Label Text="{Binding Title}" FontAttributes="Bold" />
                                        <Label Text="{Binding Author}" />
                                        <!-- Dodaj inne szczegóły książki -->
                                    </StackLayout>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </StackLayout>
                </ScrollView>
            </ContentPage.Content>
        </ContentPage>

